[package]
name = "communitas-tauri"
version = "0.1.0"
description = "Communitas P2P Chat & Diagnostics - Tauri Backend"
authors = ["P2P Foundation"]
license = "AGPL-3.0-OR-Commercial"
repository = "https://github.com/p2p-foundation/p2p"
edition = "2021"
rust-version = "1.77.2"

# [lib]
# name = "communitas_tauri_lib"
# crate-type = ["staticlib", "cdylib", "rlib"]

[build-dependencies]
tauri-build = { version = "2.3.0", features = [] }

[dependencies]
# Tauri
serde_json = "1.0"
serde = { version = "1.0", features = ["derive"] }
log = "0.4"
tauri = { version = "2.6.1", features = [] }
tauri-plugin-log = "2"

# P2P Foundation - Use our existing Communitas code
tokio = { version = "1.35", features = ["full"] }
anyhow = "1.0"
thiserror = "1.0"
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
uuid = { version = "1.6", features = ["v4", "serde"] }
chrono = "0.4"

# Additional dependencies for identity system
async-trait = "0.1"
bincode = "1.3"
hex = "0.4"
blake3 = "1.0"
once_cell = "1.19"

futures = "0.3"
getrandom = "0.2"

# Cryptographic dependencies for messaging
chacha20poly1305 = "0.10"
x25519-dalek = "2.0"
ed25519-dalek = "2.0"
hkdf = "0.12"
sha2 = "0.10"
rand = "0.8"

# Database and storage
sqlx = { version = "0.8", features = ["runtime-tokio-rustls", "sqlite", "chrono", "uuid"] }

# Compression
flate2 = "1.0"

# File type detection
mime_guess = "2.0"


[features]
default = ["custom-protocol"]
custom-protocol = ["tauri/custom-protocol"]
